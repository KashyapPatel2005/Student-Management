@model AddAchievementViewModel
@{
    Layout = "_DashboardLayout";
}

<div class="container-fluid px-4 px-lg-5 py-4">

    <div class="row justify-content-center">
        <div class="col-12 col-lg-8 col-xl-7">

            <form asp-action="AddAchievement"
                  method="post"
                  enctype="multipart/form-data"
                  class="card border-0 shadow-sm rounded-4">

                <div class="card-body p-4 p-lg-5">
                    <div class="d-flex align-items-center justify-content-between mb-4  ">
                        <h3 class="fw-light">Add Achievement</h3>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Title</label>
                        <input asp-for="Title"
                               class="form-control"
                               placeholder="Achievement title" />
                        <span asp-validation-for="Title" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Description</label>
                        <textarea asp-for="Description"
                                  rows="4"
                                  class="form-control"
                                  placeholder="Describe your achievement"></textarea>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Achieved On</label>
                        <input asp-for="AchievedOn"
                               type="date"
                               class="form-control" />
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-semibold">Upload Certificate</label>
                        <input asp-for="CertificateFile"
                               type="file"
                               class="form-control" />
                        <div class="form-text">
                            Accepted formats: PDF, JPG, PNG
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit"
                                class="btn btn-success px-4">
                            Save
                        </button>

                        <a asp-action="Achievements"
                           class="btn btn-outline-secondary px-4">
                            Cancel
                        </a>
                    </div>

                </div>
            </form>

        </div>
    </div>

</div>
