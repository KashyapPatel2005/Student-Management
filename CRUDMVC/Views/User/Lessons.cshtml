@{
    Layout = "_DashboardLayout";
}

@model List<Lesson>

<div class="container-fluid px-4 px-lg-5 py-4">

    <div class="mb-4 ">
      <P>Complete you Lessons/Tasks</P>
    </div>

    <div class="row g-3">

        @foreach (var lesson in Model)
        {
            <div class="col-12">

                <div class="card border-0 shadow-sm rounded-4 h-100">
                    <div class="card-body p-4">

                        <h5 class="fw-bold mb-2">
                            @lesson.Title
                        </h5>

                        <p class="text-muted mb-3">
                            @lesson.Description
                        </p>

                        <div class="d-flex justify-content-between align-items-center">

                            @if (ViewBag.Completed.Contains(lesson.Id))
                            {
                                <span class="text-success fw-bold d-flex align-items-center gap-2">
                                    <i class="fa-solid fa-circle-check fa-lg"></i>
                                    <span>Completed</span>
                                </span>
                            }
                            else
                            {
                                <span class="text-warning fw-semibold d-flex align-items-center gap-2">
                                    <i class="fa-regular fa-clock fa-lg"></i>
                                    Pending
                                </span>
                            }

                            @if (!ViewBag.Completed.Contains(lesson.Id))
                            {
                                <form asp-action="CompleteLesson" method="post" class="mb-0">
                                    <input type="hidden" name="lessonId" value="@lesson.Id" />
                                    <button type="submit" class="btn btn-outline-primary btn-sm px-4 rounded-pill shadow-sm transition-button">
                                        <i class="fa-solid fa-check me-1"></i> Mark as Completed
                                    </button>
                                </form>
                            }

                        </div>

                    </div>
                </div>

            </div>
        }

    </div>

</div>


