@model CRUDMVC.Models.AddStudentViewModel

<div class="container-fluid bg-light min-vh-100 px-4 px-lg-5 py-5">

    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-7">

            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-body p-4 p-lg-5">

                    <h3 class="fw-bold mb-4">Add Student</h3>

                    <form method="post" asp-action="Add" novalidate>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Name</label>
                            <input asp-for="Name"
                                   class="form-control"
                                   placeholder="Enter student name" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Email</label>
                            <input asp-for="Email"
                                   type="email"
                                   class="form-control"
                                   placeholder="Enter email address" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Phone</label>
                            <input asp-for="Phone"
                                   class="form-control"
                                   placeholder="Enter phone number" />
                            <span asp-validation-for="Phone" class="text-danger small"></span>
                        </div>

                        <div class="d-flex gap-2 mt-4">
                            <button type="submit"
                                    class="btn btn-primary px-4">
                                Save
                            </button>

                            <a asp-controller="Students"
                               asp-action="Index"
                               class="btn btn-outline-secondary px-4">
                                Cancel
                            </a>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>

</div>
