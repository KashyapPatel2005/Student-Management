@model CRUDMVC.Models.LoginViewModel

<div class="container d-flex justify-content-center align-items-center min-vh-100 p-4">
    <div class="card shadow-lg border-0 overflow-hidden" style="max-width: 900px; border-radius: 20px;">
        <div class="row g-0">
            <div class="col-md-5 d-none d-md-flex bg-dark align-items-center justify-content-center text-white p-5 text-center">
                <div>
                    <h2 class="fw-bold mb-3">Welcome Back!</h2>
                    <p class="opacity-75">Sign in to continue your journey and manage your account.</p>
                </div>
            </div>

            <div class="col-md-7 bg-white p-4 p-lg-5">
                <div class="mb-4">
                    <h3 class="fw-bold">Login</h3>
                    <p class="text-muted">Enter your credentials to access your account.</p>
                </div>

                <form asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly"
                         class="alert alert-danger py-2"
                         style="display:@(ViewData.ModelState.IsValid ? "none" : "block")">
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label small fw-bold">Email Address</label>
                        <input asp-for="Email" class="form-control bg-light border-0 py-2"  />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label small fw-bold">Password</label>
                        <input asp-for="Password" type="password" class="form-control bg-light border-0 py-2"  />
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="d-grid mt-4">
                        <button type="submit" class="btn btn-dark btn-lg fw-bold shadow-sm">Sign In</button>
                    </div>

                    <div class="d-grid mt-4">
                            <a asp-controller="Account"
                               asp-action="GoogleLogin"
                               class="btn btn-outline-dark btn-lg">
                                Continue With Google
                            </a>

                    </div>
                </form>

                <div class="text-center mt-4 pt-2">
                    <p class="text-muted small">
                        New here?
                        <a href="/Account/Register" class="text-dark fw-bold text-decoration-none border-bottom border-dark">Create an Account</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>