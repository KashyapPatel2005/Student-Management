@model CRUDMVC.Models.RegisterViewModel

<div class="container d-flex justify-content-center align-items-center min-vh-100 p-4">
    <div class="card shadow-lg border-0 overflow-hidden" style="max-width: 900px; border-radius: 20px;">
        <div class="row g-0">
            <div class="col-md-5 d-none d-md-flex bg-dark align-items-center justify-content-center text-white p-5 text-center">
                <div>
                    <h2 class="fw-bold mb-3">Welcome!</h2>
                </div>
            </div>

            <div class="col-md-7 bg-white p-4 p-lg-5">
                <div class="mb-4">
                    <h3 class="fw-bold">Register</h3>
                    <p class="text-muted">Fill in your details to get started.</p>
                </div>

                <form asp-action="Register" method="post">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label small fw-bold">Email Address</label>
                        <input asp-for="Email" class="form-control bg-light border-0 py-2" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="row">
                        <div class="col-sm-6 mb-3">
                            <label asp-for="Password" class="form-label small fw-bold">Password</label>
                            <input asp-for="Password" type="password" class="form-control bg-light border-0 py-2"  />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>
                        <div class="col-sm-6 mb-3">
                            <label asp-for="ConfirmPassword" class="form-label small fw-bold">Confirm</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control bg-light border-0 py-2"  />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="d-grid mt-4">
                        <button type="submit" class="btn btn-dark btn-lg fw-bold shadow-sm">Create Account</button>
                    </div>
                </form>

                <div class="text-center mt-4 pt-2">
                    <p class="text-muted small">Already a member? <a href="/Account/Login" class="text-dark fw-bold text-decoration-none border-bottom border-dark">Sign In</a></p>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
