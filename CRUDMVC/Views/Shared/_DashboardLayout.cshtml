
@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();

    bool isAdmin = User.IsInRole("Admin");
    bool isUser = User.IsInRole("User");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Dashboard</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        body {
            background-color: #f4f6f9;
        }

        .dashboard-sidebar {
            background: #212529;
            min-height: 100vh;
            padding: 20px 10px;
        }

            .dashboard-sidebar .nav-link {
                color: #ced4da;
                padding: 14px 16px;
                border-radius: 10px;
                margin-bottom: 8px;
                display: flex;
                align-items: center;
                gap: 12px;
                font-size: 15px;
                transition: all 0.3s ease;
            }

                .dashboard-sidebar .nav-link i {
                    width: 22px;
                    text-align: center;
                    font-size: 16px;
                }

                .dashboard-sidebar .nav-link:hover {
                    background-color: #343a40;
                    color: #ffffff;
                    transform: translateX(6px);
                }

                .dashboard-sidebar .nav-link.active {
                    background-color: #0d6efd;
                    color: #ffffff;
                    font-weight: 600;
                    box-shadow: 0 6px 14px rgba(13, 110, 253, 0.4);
                }

        .dashboard-content {
            padding: 30px;
        }
    </style>
</head>

<body>

    <nav class="navbar navbar-dark bg-dark border-bottom px-4 py-3">
        <span class="navbar-brand fw-semibold">Student Portal</span>

        @* <div class="ms-auto d-flex align-items-center gap-3 text-white">
            <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center"
                 style="width:40px;height:40px;">
                <strong>@User.Identity?.Name?.ToUpper().FirstOrDefault()</strong>
            </div>
            <span>@User.Identity.Name</span>

            <form asp-controller="Account" asp-action="Logout" method="post">
                <button class="btn btn-danger btn-sm ms-3">
                    Logout
                </button>
            </form>
        </div> *@
        <div class="dropdown ms-auto">
            <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle"
               id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">

                <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center me-2"
                     style="width: 35px; height: 35px;">
                    <span class="fw-bold text-white small">
                        @User.Identity?.Name?.ToUpper().FirstOrDefault()
                    </span>
                </div>

                <span class="fw-semibold d-none d-sm-inline">@User.Identity.Name</span>
            </a>

            <ul class="dropdown-menu dropdown-menu-end shadow-sm mt-2" aria-labelledby="userDropdown">
                <li>
                    <a class="dropdown-item py-2" asp-controller="User" asp-action="Index">
                        <i class="fa-solid fa-user-gear me-2 text-muted"></i> My Profile
                    </a>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <form asp-controller="Account" asp-action="Logout" method="post" class="px-2">
                        <button type="submit" class="dropdown-item rounded text-danger py-2">
                            <i class="fa-solid fa-right-from-bracket me-2"></i> Logout
                        </button>
                    </form>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">

            <aside class="col-md-2 dashboard-sidebar">

                <ul class="nav flex-column">

                    @if (isUser)
                    {
                        <li class="nav-item">
                            <a class="nav-link @(currentAction == "Index" ? "active" : "")"
                               asp-controller="User" asp-action="Index">
                                <i class="fa-solid fa-user text-light"></i>
                                <span class="ms-2">My Profile</span>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @(currentAction == "Lessons" ? "active" : "")"
                               asp-controller="User" asp-action="Lessons">
                                <i class="fa-solid fa-book-open text-light"></i>
                                <span class="ms-2">Lessons</span>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @(currentAction == "Progress" ? "active" : "")"
                               asp-controller="User" asp-action="Progress">
                                <i class="fa-solid fa-chart-line text-light"></i>
                                <span class="ms-2">My Progress</span>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @(currentAction == "Achievements" ? "active" : "")"
                               asp-controller="User" asp-action="Achievements">
                                <i class="fa-solid fa-award text-light"></i>
                                <span class="ms-2">Achievements / Certificates</span>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @(currentAction == "History" ? "active" : "")"
                               asp-controller="UserDashboard" asp-action="History">
                                <i class="fa-solid fa-clock-rotate-left text-light"></i>
                                <span class="ms-2">History</span>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @(currentAction == "Notifications" ? "active" : "")"
                               asp-controller="UserDashboard" asp-action="Notifications">
                                <i class="fa-solid fa-bell text-light"></i>
                                <span class="ms-2">Notifications</span>
                            </a>
                        </li>


                    }

                    @if (isAdmin)
                    {
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "Students" ? "active" : "")"
                               asp-controller="Students" asp-action="List">
                                <i class="fa-solid fa-users"></i>
                                Students
                            </a>
                        </li>
                    }

                </ul>

            </aside>

            <main class="col-md-10 dashboard-content">
                @RenderBody()
            </main>

        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", false)

</body>
</html>
